{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "../dist",
    "rootDir": "../src",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["node_modules"]
}
